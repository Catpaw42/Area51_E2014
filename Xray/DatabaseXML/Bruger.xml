<?xml version="1.0" encoding="UTF-8"?>
<database xmlns="http://www.spoledge.com/audao" version="1.0">

	<config>
		<factory>
			<create-params default="false" direct="true" />
		</factory>
	</config>

	<tables>
		<table name="bruger">
			<edit-mode>row</edit-mode>
			<auto-find />
			<columns>
				<column name="bruger_id">
					<type>int</type>
					<auto />
					<pk />
				</column>
				<column name="bruger_navn">
					<type max-length="30">String</type>
					<not-null />
					<edit />
				</column>
				<column name="kodeord">
					<type max-length="30">String</type>
					<not-null />
					<edit />
				</column>
				<column name="fuldt_navn">
					<type max-length="100">String</type>
					<not-null />
					<edit />
				</column>
				<column name="er_aktiv">
					<type>boolean</type>
					<not-null />
					<edit />
				</column>
				<column name="afdeling">
					<type max-length="30">String</type>
					<not-null />
				</column>
			</columns>
			
			<methods>
				<find name="afdeling">
				<condition>
					<query>
					SELECT DISTINCT afdeling FROM Bruger
					</query>
				</condition>
				</find>
				<find name="dynamic">
					<dynamic />
				</find>
				
			</methods>

		</table>
	</tables>

</database>